---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { Header } from "@/components/layout";

interface Props {
  title?: string;
}

const { title = "Braninlyx AI" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header
        client:load
        currentPath={Astro.url.pathname}
        initialIsAuthenticated={Astro.locals.isAuthenticated}
        initialUser={Astro.locals.user}
      />
      <main class="container mx-auto max-w-6xl px-4 py-8 text-center">
        <slot />
      </main>
    </div>
    <Toaster client:load position="top-right" richColors />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
