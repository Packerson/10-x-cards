---
import Layout from "@/layouts/Layout.astro"
import SampleFlipCards from "@/components/sample/SampleFlipCards.astro"
import { buttonVariants } from "@/components/ui/button"

const { user, isAuthenticated } = Astro.locals as {
  user?: {
    id: string
    email: string | null
    display_name: string | null
  }
  isAuthenticated?: boolean
}

const userLabel = user?.display_name || user?.email || null
const greeting = userLabel ? `Cześć, ${userLabel}!` : "Cześć!"
export const prerender = false
---

<Layout title="Start | 10x Cards">
  <section class="space-y-10 text-center">
    {isAuthenticated ? (
      <header class="space-y-4">
        <div class="space-y-3">
          <h1 class="text-3xl font-semibold tracking-tight text-foreground sm:text-4xl">{greeting}</h1>
          <p class="mx-auto max-w-2xl text-base text-muted-foreground text-center">
            Wklej dowolny tekst, a AI zaproponuje zestaw fiszek do akceptacji, edycji lub odrzucenia.
            Możesz też ręcznie tworzyć i zarządzać swoimi fiszkami.
          </p>
          <p class="text-sm text-muted-foreground">
            To MVP aplikacji — funkcje są rozwijane i mogą się zmieniać.
          </p>
        </div>
      </header>
    ) : (
      <header class="space-y-4">
        <h1 class="text-3xl font-semibold tracking-tight text-foreground sm:text-4xl">
          Fiszki generowane z AI, szybciej niż kiedykolwiek
        </h1>
        <p class="mx-auto max-w-2xl text-base text-muted-foreground text-center">
          Wklej dowolny tekst, a AI zaproponuje zestaw fiszek do akceptacji, edycji lub odrzucenia.
          Możesz też ręcznie tworzyć i zarządzać swoimi fiszkami.
        </p>
        <p class="text-sm text-muted-foreground">
          To MVP aplikacji — funkcje są rozwijane i mogą się zmieniać.
        </p>
      </header>
    )}

    <section class="space-y-4">
      <h2 class="text-lg font-semibold text-foreground">Szybki start</h2>
      <div class="flex flex-col items-center gap-3 sm:flex-row sm:flex-wrap sm:justify-center">
        {isAuthenticated ? (
          <>
            <a
              href="/generate"
              class={buttonVariants({ variant: "default", size: "lg", className: "w-full sm:w-auto" })}
            >
              Generuj fiszki
            </a>
            <a
              href="/cards"
              class={buttonVariants({ variant: "outline", size: "lg", className: "w-full sm:w-auto" })}
            >
              Przejdź do moich fiszek
            </a>
          </>
        ) : (
          <>
            <a href="/auth/login" class={buttonVariants({ variant: "default", size: "lg" })}>
              Zaloguj się
            </a>
            <a href="/auth/register" class={buttonVariants({ variant: "outline", size: "lg" })}>
              Zarejestruj się
            </a>
          </>
        )}
      </div>
    </section>

    <section class="grid gap-4 sm:grid-cols-2">
      <div class="rounded-lg border bg-card p-5 shadow-sm">
        <h3 class="text-base font-semibold text-foreground">Co możesz zrobić teraz</h3>
        <ul class="mt-3 space-y-2 text-sm text-muted-foreground">
          <li>Wygenerować fiszki z tekstu i zapisać wybrane propozycje.</li>
          <li>Ręcznie tworzyć, edytować i usuwać własne fiszki.</li>
          <li>Wznawiać pracę nad listą fiszek w dowolnym momencie.</li>
        </ul>
      </div>
      <div class="rounded-lg border bg-card p-5 shadow-sm">
        <h3 class="text-base font-semibold text-foreground">Co jest w planach</h3>
        <ul class="mt-3 space-y-2 text-sm text-muted-foreground">
          <li>Talie i kategorie do porządkowania materiału.</li>
          <li>Pomoc AI w generowaniu promptów do generowania fiszek.</li>
          <li>Prosty tryb sesji nauki w MVP.</li>
          <li>Pobieranie fiszek w formacie PDF.</li>
          <li>Więcej statystyk i historii generowania.</li>
        </ul>
      </div>
    </section>

    <SampleFlipCards />
  </section>
</Layout>
